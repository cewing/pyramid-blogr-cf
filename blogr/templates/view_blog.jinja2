{% extends "blogr:templates/layout.jinja2" %}

{% block content %}

<h1>{{ entry.title }}</h1>
<hr/>
<p>{{ entry.body|markdown }}</p>
<hr/>
<p>Created <strong title="{{ entry.created }}">
{{ entry.created_in_words }}</strong> ago</p>

<p>
<a href="{{ request.route_url('home') }}">Go Back</a>
{% if logged_in -%}
::
<a href="{{ request.route_url('blog_action', action='edit', _query=(('id',entry.id),)) }}">
  Edit Entry</a>
{%- endif %}
</p>

{% endblock %}

{% extends "blogr:templates/layout.jinja2" %}

{% block content %}

<form action="" method="POST">
{% for field in form %}
  {% if field.errors %}
    <ul>
    {% for error in field.errors %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}
    <p>{{ field.label }}: {{ field }}</p>
{% endfor %}
    <p><input type="submit" name="submit" value="Submit" /></p>
</form>

<p><a href="{{ request.route_url('home') }}">Go Back</a></p>

{% endblock %}
